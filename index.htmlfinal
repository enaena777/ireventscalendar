<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editable Calendar</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #fef9f5, #e8ded1);
      margin: 0;
      padding: 0;
      color: #4b3d33;
    }
    header {
      background-color: #d9c2a3;
      color: #4b3d33;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    header h1 {
      margin: 0;
      font-size: 2rem;
    }
    .calendar-controls {
      text-align: center;
      margin: 20px auto;
    }
    .calendar-controls button, select {
      background-color: #bfa78a;
      color: #fff;
      border: none;
      padding: 10px 20px;
      margin: 5px;
      font-size: 14px;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    .calendar-controls button:hover {
      background-color: #a88f71;
    }
    .calendar-controls select, .highlight-select {
      color: #4b3d33;
      background-color: #f3e9dd;
    }
    .highlight-select {
      margin-left: 10px;
    }
    .calendar {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      padding: 20px;
      max-width: 1400px;
      margin: auto;
    }
    .day {
      background-color: #fffaf5;
      border-radius: 15px;
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.08);
      padding: 12px;
      min-height: 150px;
      position: relative;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .day.today {
      border: 2px solid #c2996b;
      box-shadow: 0 0 12px #ffdcaa;
    }
    .day:hover {
      transform: scale(1.015);
    }
    .day textarea {
      width: 100%;
      height: 90px;
      resize: none;
      border: 1px solid #d4c2b1;
      border-radius: 8px;
      padding: 8px;
      margin-top: 8px;
      font-size: 14px;
      background-color: #fcf7f2;
      color: #4b3d33;
    }
    .day-number {
      font-weight: bold;
      color: #6e5849;
      font-size: 14px;
    }
    .save-btn {
      position: absolute;
      bottom: 10px;
      right: 10px;
      background-color: #8abf8a;
      color: white;
      border: none;
      padding: 6px 12px;
      font-size: 12px;
      border-radius: 6px;
      cursor: pointer;
    }
    .save-btn:hover {
      background-color: #78a978;
    }
    .highlight-magenta { background-color: #ffd6f5 !important; }
    .highlight-cyan { background-color: #d6faff !important; }
    .highlight-blue { background-color: #d6e6ff !important; }
    @media (max-width: 600px) {
      .calendar-controls button, .calendar-controls select {
        display: block;
        width: 90%;
        margin: 10px auto;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>IR Events Calendar</h1>
    <p>Click any day to write a note. All notes stay saved on your device.</p>
  </header>

  <div class="calendar-controls">
    <select id="month-select" onchange="filterByMonth()">
      <option value="all">All Months</option>
    </select>
    <button onclick="clearAllNotes()">üßπ Clear All Notes</button>
    <button onclick="downloadNotes()">üíæ Export Notes</button>
    <button onclick="window.print()">üñ®Ô∏è Print Calendar</button>
    <select id="highlight-select" class="highlight-select" onchange="setHighlight(this.value)">
      <option value="">Highlight</option>
      <option value="magenta">Magenta</option>
      <option value="cyan">Cyan</option>
      <option value="blue">Blue</option>
    </select>
  </div>

  <div class="calendar" id="calendar"></div>

  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const calendar = document.getElementById('calendar');
      const currentYear = new Date().getFullYear();
      const today = new Date().toDateString();
      const monthSelect = document.getElementById('month-select');
      let currentHighlight = '';

      const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
      months.forEach((month, i) => {
        const option = document.createElement('option');
        option.value = i;
        option.textContent = month;
        monthSelect.appendChild(option);
      });

      function generateCalendar(year) {
        const daysInYear = (year % 4 === 0 && year % 100 !== 0) || year % 400 === 0 ? 366 : 365;
        for (let day = 1; day <= daysInYear; day++) {
          const date = new Date(year, 0);
          date.setDate(day);

          const dayDiv = document.createElement('div');
          dayDiv.className = 'day';
          dayDiv.setAttribute('data-month', date.getMonth());

          if (date.toDateString() === today) {
            dayDiv.classList.add('today');
          }

          const dayNumber = document.createElement('div');
          dayNumber.className = 'day-number';
          dayNumber.textContent = date.toDateString();

          const note = document.createElement('textarea');
          const savedNote = localStorage.getItem(`note-${year}-${day}`);
          if (savedNote) note.value = savedNote;

          const savedHighlight = localStorage.getItem(`highlight-${year}-${day}`);
          if (savedHighlight) dayDiv.classList.add(`highlight-${savedHighlight}`);

          const saveBtn = document.createElement('button');
          saveBtn.textContent = 'Save';
          saveBtn.className = 'save-btn';
          saveBtn.addEventListener('click', () => {
            localStorage.setItem(`note-${year}-${day}`, note.value);
            if (currentHighlight) {
              dayDiv.classList.remove('highlight-magenta', 'highlight-cyan', 'highlight-blue');
              dayDiv.classList.add(`highlight-${currentHighlight}`);
              localStorage.setItem(`highlight-${year}-${day}`, currentHighlight);
            }
          });

          dayDiv.appendChild(dayNumber);
          dayDiv.appendChild(note);
          dayDiv.appendChild(saveBtn);
          calendar.appendChild(dayDiv);
        }
      }

      function filterByMonth() {
        const selectedMonth = monthSelect.value;
        const allDays = document.querySelectorAll('.day');
        allDays.forEach(day => {
          if (selectedMonth === 'all') {
            day.style.display = 'block';
          } else {
            day.style.display = day.getAttribute('data-month') === selectedMonth ? 'block' : 'none';
          }
        });
      }

      function clearAllNotes() {
        if (confirm('Are you sure you want to delete all saved notes?')) {
          const keysToDelete = [];
          for (let i = 0; i < localStorage.length; i++) {
            const key = localStorage.key(i);
            if (key.startsWith('note-') || key.startsWith('highlight-')) {
              keysToDelete.push(key);
            }
          }
          keysToDelete.forEach(key => localStorage.removeItem(key));
          window.location.reload();
        }
      }

      function downloadNotes() {
        let notesData = '';
        for (let i = 0; i < localStorage.length; i++) {
          const key = localStorage.key(i);
          if (key.startsWith('note-')) {
            notesData += `${key}: ${localStorage.getItem(key)}
`;
          }
        }
        const blob = new Blob([notesData], { type: 'text/plain' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'calendar-notes.txt';
        link.click();
      }

      function setHighlight(color) {
        currentHighlight = color;
      }

      generateCalendar(currentYear);
    });
  </script>
</body>
</html>
